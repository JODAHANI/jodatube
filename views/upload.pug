extends base.pug

block content
    form(method="POST", enctype="multipart/form-data")
        if errorMessage
            span=errorMessage
        label(for="video") Video File
        input(type="file" id="video" accept="video/*" required, name="video")
        label(for="thumb") Thumb File
        input(type="file" id="thumb" accept="image/*" required, name="thumb")
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=5)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")